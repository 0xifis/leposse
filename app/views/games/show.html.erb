<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @game.title %>
</p>

<p>
  <b>Sport:</b>
  <%= @game.sport.name %>
</p>

<p>
  <b>Date:</b>
  <%= @game.date %>
</p>

<p>
  <b>Start time:</b>
  <%= @game.start_time %>
</p>

<p>
  <b>End time:</b>
  <%= @game.end_time %>
</p>

<p>
  <b>Venue:</b>
  <%= @game.venue.name %>
</p>

<p>
  <b>Details:</b>
  <%= @game.details %>
</p>

<p>
  <b>Maxpax:</b>
  <%= @game.maxpax %>
</p>

<p>
  <b>Host:</b>
  <%= name(User.find(@game.host_id).id) %>
</p>

<table>
  <thead>
    <tr>
      <th>Members</th>
    </tr>
  </thead>
  <tbody>
    <% @game.users.each do|t| %>
      <tr><td><%= name(t) %></td></tr>
    <% end %>
  </tbody>
</table>

<br>
<% if GamesUsers.where(game_id: params[:id]).where(user_id: current_user.id).present? %>
<%= link_to "Unjoin", unjoin_path %> | 
<% else %>
<%= link_to "Join", join_path %> | 
<% end %>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
