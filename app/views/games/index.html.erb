<h1>Listing games</h1>

<table>
  <tr>
    <th>Sport</th>
    <th>Date</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Venue</th>
    <th>Details</th>
    <th>Maxpax</th>
    <th>Host</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.sport.name %></td>
    <td><%= game.date %></td>
    <td><%= game.start_time %></td>
    <td><%= game.end_time %></td>
    <td><%= game.venue.name %></td>
    <td><%= game.details %></td>
    <td><%= game.maxpax %></td>
    <td><%= name(User.find(game.host_id).id) %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

