<h1>Listing games</h1>

<table class="table table-hover">
    <thead>
  <tr>
    <th>Name</th>
    <th>Host</th>
    <th>Sport</th>
    <th>Date</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Venue</th>
    <th>Maxpax</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
<% @games.each do |game| %>
  <tr>
    <td><%= game.title %></td>
    <td><%= name(User.find(game.host_id).id) %></td>    
    <td><%= game.sport.name %></td>
    <td><%= game.date %></td>
    <td><%= game.start_time.strftime("%H:%M") %></td>
    <td><%= game.end_time.strftime("%H:%M") %></td>
    <td><%= game.venue.name %></td>
    <td><%= game.maxpax %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'New Game', new_game_path, class: "btn" %>
