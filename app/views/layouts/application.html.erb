<!DOCTYPE html>
<html>
<head>
  <title>Leposse</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'partials/navbar' %>
	<div class="container">
		<div class="row-fluid">
			<div class="span2 sidebar hide-mobile"><%= render 'partials/sidebar' %></div>
			<div class="span10 content" id="<%=controller_name%>">
				<% if flash[:alert] %>
					<div class="alert alert-error">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						<%= flash[:alert] %>
					</div>
				<% end %>
				<% if flash[:notice] %>
					<div class="alert alert-success">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						<%= flash[:notice] %>
					</div>
				<% end %>

				<%=yield%>	
			</div>
		</div>		
	</div>
</body>
</html>
